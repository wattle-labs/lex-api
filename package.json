{
  "name": "api",
  "version": "1.0.0",
  "description": "Lex API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "vite build",
    "start": "node dist/server.js",
    "lint:check": "eslint ./src --max-warnings 0",
    "lint:fix": "eslint ./src --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
